<!-- ======= HTML Head ======= -->
<%- include('components/htmlHead') %>

<body>
<!-- ======= Header ======= -->
<%- include('components/header') %>
<!-- End Header -->

<!-- ======= Sidebar ======= -->
<%- include('components/sidebar') %>
<!-- End Sidebar-->

<!-- ======= Main ======= -->
<main id="main" class="main">
    <section class="section">
        <div class="row justify-content-center py-5">
          <div class="col-lg-8">
              <!-- Floating Labels Form -->
              <form class="row g-3" action="/editBlog" method="post" enctype="multipart/form-data">
                  <input type="text" class="form-control" name="_id" value="<%= blog._id %>" hidden>
                  <div class="col-md-12">
                    <div class="form-floating">
                      <input type="text" class="form-control" id="floatingName" value="<%= blog.title %>" name="title" placeholder="title">
                      <label for="floatingName">Title</label>
                    </div>
                  </div>
                  <div class="col-sm-12">
                      <input class="form-control" name="blogImg" type="file" id="formFile">
                      <input class="form-control" name="oldImg" type="text" value="<%= blog.blogImg %>" hidden>
                  </div>
                  <!-- TinyMCE Editor -->
                    <textarea class="tinymce-editor" name="blog">
                        <%= blog.blog %>
                    </textarea>
                  <!-- End TinyMCE Editor -->
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary">Update</button>
                  </div>
              </form>
              <!-- End floating Labels Form -->
          </div>
        </div>
    </section>
</main>
<!-- End Main -->

<!-- ======= Footer ======= -->
<%- include('components/footer') %>
<!-- End Footer -->
 
<!-- Vendor JS Files -->
<%- include('components/scripts') %>
</body>

</html>