<!-- ======= HTML Head ======= -->
<%- include('components/htmlHead') %>

<body>
<!-- ======= Header ======= -->
<%- include('components/header') %>
<!-- End Header -->

<!-- ======= Sidebar ======= -->
<%- include('components/sidebar') %>
<!-- End Sidebar-->

<!-- ======= Main ======= -->
<main id="main" class="main">
    <section class="py-5 bg-light">
        <div class="container">
          <h2 class="text-center mb-5">My Blogs</h2>
          <div class="row">
            <% blogs.forEach( blog => { %>
                <div class="col-4">
                    <div class="card p-2">
                        <img src="<%= blog.blogImg %>" style="width: 100%;aspect-ratio: 3/2;" class="card-img-top p-2 object-fit-fill border" alt="...">
                        <div class="card-body mt-3">
                          <h5 class="card-title"><%= blog.title %></h5>
                          <%- blog.blog %>
                        </div> 
                        <div class="d-flex align-items-center justify-content-center column-gap-3">
                            <a href="/editBlog/<%= blog._id %>" class="btn btn-primary">Edit</a>
                            <a href="/deleteBlog/<%= blog._id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            <% }) %>
          </div>
        </div>
      </section>      
</main>
<!-- End Main -->

<!-- ======= Footer ======= -->
<%- include('components/footer') %>
<!-- End Footer -->
 
<!-- Vendor JS Files -->
<%- include('components/scripts') %>
</body>

</html>